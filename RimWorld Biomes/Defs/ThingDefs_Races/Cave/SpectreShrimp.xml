        <race>RWBSpectreShrimp</race>
        <combatPower>100</combatPower>
        <canArriveManhunter>true</canArriveManhunter>
        <wildSpawn_spawnWild>true</wildSpawn_spawnWild>
        <wildSpawn_GroupSizeRange>
