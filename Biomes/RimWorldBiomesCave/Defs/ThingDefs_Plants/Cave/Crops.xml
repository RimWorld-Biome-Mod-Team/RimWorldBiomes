    <ThingDef ParentName="PlantBase">
        <defName>GlowfruitTree</defName>
        <label>glowfruit tree</label>
        <description>The lone tree species that has adapted to the dark environment of the caverns, this tree produces a citrus like fruit that glows in the dark. It is a considerable source of food and a favorite of the fruit bats that call the caverns home. </description>
        <statBases>
            <MaxHitPoints>300</MaxHitPoints>
        </statBases>
        <graphicData>
            <texPath>Plants/Crops/GlowfruitTree</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <selectable>true</selectable>
        <pathCost>10</pathCost>
        <ingestible>
            <nutrition>1.8</nutrition>
        </ingestible>
        <plant>
            <fertilityMin>0.01</fertilityMin>
            <blockAdjacentSow>true</blockAdjacentSow>
            <growMinGlow>0</growMinGlow>
            <growOptimalGlow>0</growOptimalGlow>
            <cavePlant>true</cavePlant>
            <fertilitySensitivity>0</fertilitySensitivity>
            <growDays>13</growDays>
            <lifespanFraction>6.925</lifespanFraction>
            <dieIfLeafless>true</dieIfLeafless>
            <reproduces>false</reproduces>
            <sowWork>1500</sowWork>
      		<harvestWork>400</harvestWork>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>Glowfruit</harvestedThingDef>
            <harvestYield>50</harvestYield>
            <harvestAfterGrowth>0.50</harvestAfterGrowth>
            <immatureGraphicPath>Plants/Immature/GlowfruitTree</immatureGraphicPath>
            <sowTags>
                <li>Ground</li>
            </sowTags>
            <topWindExposure>0.1</topWindExposure>
            <visualSizeRange>
                <min>0.6</min>
                <max>2.8</max>
            </visualSizeRange>
        </plant>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>5</glowRadius>
                <glowColor>(113,141,117,1)</glowColor>
            </li>
        </comps>
    </ThingDef>
    
