<?xml version="1.0" encoding="utf-8" ?>
 
<Defs>
 
 <ThingDef ParentName="BuildingBase">
    <defName>CrystalTorchLamp</defName>
    <label>Crystal Torch</label>
    <description>A wooden torch for lighting an area. Made with these intricate glowing crystals found in caves.</description>
    <category>Building</category>
    <graphicData>
        <color>(170,219,255)</color>
      <texPath>Buildings/CrystalTorchLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>6</pathCost>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>250</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
	<stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <costList>
        <RWBCrystalShards>25</RWBCrystalShards>
    </costList>
    <soundImpactDefault>BulletImpactGround</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(170,219,255,1)</glowColor>
      </li>
    </comps>
    <designationCategory>Furniture</designationCategory>
    <designationHotKey>Misc10</designationHotKey>
	<minifiedDef>MinifiedFurniture</minifiedDef>
  </ThingDef>
  
</Defs>
