<Defs>

    <ThingDef ParentName="BaseMeleeWeapon_Sharp">
        <defName>RWB_HandDrill</defName>
        <label>hand drill</label>
        <techLevel>Industrial</techLevel>
        <description>A hand drill that increases mining speed.</description>
        <graphicData>
            <texPath>Things/Weapons/Caves/HandDrill/HandDrill</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <weaponTags>
            <li>NonNeolithicOnlyMelee</li>
            <li>NonNeolithicOnlySimpleMelee</li>
            <li>NeolithicMeleeBasic</li>
        </weaponTags>
        <statBases>
            <WorkToMake>400</WorkToMake>
            <Mass>0.5</Mass>
            <Weapon_Bulk>0.4</Weapon_Bulk>
        </statBases>
        <equippedStatOffsets>
            <MiningSpeed>3</MiningSpeed>
            <MiningYield>1.5</MiningYield>
        </equippedStatOffsets>
        <costList>
            <Steel>150</Steel>
            <Component>25</Component>
            <RWBChunkCrystal>50</RWBChunkCrystal>
        </costList>
        <!--		<equippedAngleOffset>-65</equippedAngleOffset>-->
        <recipeMaker>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
        </recipeMaker>
        <tools>
            <li>
                <label>drill</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>5.4</power>
                <cooldownTime>1.6</cooldownTime>
            </li>
        </tools>
    </ThingDef>

